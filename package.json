{
  "name": "clipsync",
  "version": "1.0.0",
  "description": "A modern, Windows 11-inspired clipboard manager built with Electron.js for cross-platform compatibility",
  "main": "out/main/index.js",
  "homepage": "https://github.com/ahadalichowdhury/ClipSync",
  "author": {
    "name": "S. M. Ahad Ali Chowdhury",
    "email": "smahadalichowdhury@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "dev:main": "cross-env NODE_ENV=development electron-vite dev",
    "dev:renderer": "cross-env NODE_ENV=development electron-vite dev",
    "build": "electron-vite build",
    "build:main": "electron-vite build",
    "build:renderer": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron out/main/index.js",
    "compile": "electron-vite build",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "create-icon": "node scripts/create-icon.js",
    "create-dock-icon": "node scripts/create-dock-icon.js",
    "create-icns": "node scripts/create-icns.js",
    "create-clipsync-icon": "node scripts/create-clipsync-icon.js",
    "create-about-icon": "node scripts/create-about-icon.js"
  },
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.16.16",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^4.4.1",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.8",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "electron": "^36.3.1",
    "electron-builder": "^24.8.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pngjs": "^7.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "clipboard",
    "clipboard-manager",
    "electron",
    "cross-platform",
    "windows-11",
    "productivity",
    "utility",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ahadalichowdhury/ClipSync"
  },
  "bugs": {
    "url": "https://github.com/ahadalichowdhury/ClipSync"
  },
  "build": {
    "appId": "com.clipsync.app",
    "productName": "ClipSync",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/app.icns",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/app.icns",
      "iconSize": 80,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "format": "UDZO"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/app.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ClipSync"
    },
    "publish": {
      "provider": "github",
      "owner": "yourusername",
      "repo": "clipsync"
    }
  }
}
